{% extends '::admin.html.twig' %}

{% block body %}
    <div class="content">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <form action="{{ path('admin_serial_edit_path', {'slug' : slug}) }}" method="POST" {{ form_enctype(form) }}>
                    <div class="col-sm-12">
                        {{ form_label(form.poster) }}
                        {{ form_widget(form.poster) }}
                    </div>

                    <div class="col-sm-12">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                    </div>

                    <div class="col-sm-12">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description) }}
                    </div>

                    <div class="col-sm-12">
                        {{ form_label(form.releasedAt) }}
                        {{ form_widget(form.releasedAt) }}
                    </div>

                    <div class="col-sm-12">
                        {{ form_label(form.country) }}
                        {{ form_widget(form.country) }}
                    </div>

                    <div class="col-sm-12">
                        {{ form_label(form.city) }}
                        {{ form_widget(form.city) }}
                    </div>

                    <div class="col-sm-12">
                        {{ form_label(form.genres) }}
                        {{ form_widget(form.genres) }}
                    </div>

                    <div class="col-sm-12">
                        {{ form_label(form.actors) }}
                        {{ form_widget(form.actors) }}
                    </div>

                    <div class="col-sm-12">
                        {{ form_label(form.directors) }}
                        {{ form_widget(form.directors) }}
                    </div>

                    <div class="col-sm-12">
                        <button class="btn btn-success" type="submit">Create</button>
                    </div>

                    {{ form_rest(form) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
